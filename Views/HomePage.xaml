<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:WeatherApp.ViewModels"
             x:Class="WeatherApp.Views.HomePage">

    <ContentPage.BindingContext>
        <vm:HomeViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Vremea în:" FontSize="24"/>
            <Entry Text="{Binding CityName}" Placeholder="Introdu orașul" />
            <Button Text="Afișează vremea" Clicked="OnShowWeatherClicked" />

            <Label Text="{Binding Weather.Name}" FontSize="20" />
            <Label Text="{Binding Weather.Main.Temp, StringFormat='Temperatură: {0}°C'}" />
            <Label Text="{Binding Weather.Main.Humidity, StringFormat='Umiditate: {0}%'}" />
            <Label Text="{Binding Weather.Weather[0].Description}" />
            <Image Source="{Binding Weather.Weather[0].Icon, Converter={StaticResource IconConverter}}" HeightRequest="100"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
