<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:WeatherApp.ViewModels"
             x:Class="WeatherApp.Views.LocationsPage">

    <ContentPage.BindingContext>
        <vm:LocationsViewModel />
    </ContentPage.BindingContext>

    <CollectionView ItemsSource="{Binding Locations}" SelectionMode="None">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout Padding="10">
                    <Label Text="{Binding CityName}" FontSize="20"/>
                    <Button Text="Șterge" Clicked="OnDeleteClicked" CommandParameter="{Binding .}" />
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
